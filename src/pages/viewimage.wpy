<template>
  <view class="viewimage">
    <text selectable='true' class="title">{{title}}</text>
    <image class="image" src="{{url}}" mode="widthFix"></image>
  </view>
</template>

<script>
  import wepy from 'wepy';
  import api from "@/api/api";
  export default class viewimage extends wepy.page {
    config = {
      navigationBarTitleText: '',
    }
    Page = {}
    data = {
      title: "",
      url: "",
    }
    onLoad(options) {
      this.title = options.title;
      wepy.setNavigationBarTitle({
        title: options.title,
      })
      this.url = options.url;
      this.$apply();
    }
    onShareAppMessage() {
      return {
        title: '恋爱联盟',
        path: '/pages/viewimage?title=' + this.title + '&url=' + this.url,
      };
    }
    onUnload() {
      var pages = getCurrentPages();
      if (pages.length == 1) {
        wx.switchTab({
          url: "/pages/home"
        })
      }
    }
  }
</script>

